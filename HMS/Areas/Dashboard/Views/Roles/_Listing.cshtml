@model RolesListingModel


@if (Model != null && Model.Roles!= null && Model.Roles.Count() > 0)
{
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="text-center">Roles Table</h4>
        </div>

        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr class="text-center">
                            <th>ID</th>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model.Roles)
                        {

                            <tr class="success text-center">
                                <td>@role.Id</td>
                                <td>@role.Name</td>

                                <td class="embed-responsive-item">
                                    <button class="action-btn btn btn-primary float-lg-left mr-2" data-href="@Url.Action("Action", "Roles" ,new { ID=role.Id})" data-toggle="modal" data-target="#myModal"><i class="fa fa-pencil-square-o mr-1"></i>Edit</button>
                                    <button class="action-btn btn btn-danger float-lg-left" data-href="@Url.Action("Delete", "Roles" ,new { ID=role.Id})" data-toggle="modal" data-target="#myModal"><i class="fa fa-trash-o mr-1"></i>Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning" role="alert">
        Sorry! NO records exist.
    </div>
}


